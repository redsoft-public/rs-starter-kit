                        required
                    ).js-mask-card
                .form__field
                    +input-text({ validate: true })(
                        placeholder="Дата"
                        name="date"
                        required
                    ).js-mask-date
                .form__field
                    +input-text({ validate: true })(
                        name="password"
                        placeholder="Пароль"
                        required
                        type="password"
                    )#js-password
                .form__field
                    +input-text({ validate: true })(
                        equalTo="#js-password"
                        name="password"
                        placeholder="Повторите пароль"
                        required
                        type="password"
                    )

                .form__field
